<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >
    <shape
        android:thickness="2dp"
        android:shape="ring"
        android:dither="true"
        android:useLevel="false" >
        <gradient
            android:centerY="0.5"
            android:centerX="0.5"
            android:endColor="#3F51B5"
            android:centerColor="#88fa3c55"
            android:startColor="#00014DA3"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>