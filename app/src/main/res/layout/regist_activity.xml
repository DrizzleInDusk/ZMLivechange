<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/purple"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/registback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:src="@mipmap/left_go" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/regist"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="27dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round3_llpurple"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:src="@mipmap/shouji"/>
            <TextView
                android:id="@+id/regist_guishu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="大陆"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/regist_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:textCursorDrawable="@drawable/color_cursor"
                android:drawablePadding="25dp"
                android:gravity="center_vertical"
                android:hint="@string/mobilehint"
                android:maxLength="11"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/regist_authcode"
                android:layout_width="@dimen/zero"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round3_llpurple"
                android:drawableLeft="@mipmap/yanzheng"
                android:layout_marginRight="8dp"
                android:drawablePadding="15dp"
                android:gravity="center_vertical"
                android:hint="@string/authcodehint"
                android:maxLength="11"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/regist_getauthcode"
                android:layout_width="@dimen/zero"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/round3_lightpurple1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/authcode"
                android:textColor="@color/purple"
                android:textSize="14dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/regist_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/round3_llpurple"
            android:drawableLeft="@mipmap/passkeys"
            android:drawablePadding="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:hint="@string/registpasshint"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/regist_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/round3_llpurple"
            android:drawableLeft="@mipmap/passkeys"
            android:drawablePadding="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:hint="@string/registpasshint1"
            android:inputType="textPassword"
            android:maxLength="12"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13dp" />
        <EditText
            android:id="@+id/regist_age"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/round3_llpurple"
            android:drawableLeft="@mipmap/nianl"
            android:drawablePadding="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:hint="@string/agehint"
            android:inputType="phone"
            android:maxLength="3"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/regist_diqu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round3_llpurple"
            android:drawableLeft="@mipmap/diqu"
            android:drawablePadding="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:hint="@string/registqiduhint"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/regist_gander"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round3_llpurple"
            android:drawableLeft="@mipmap/xingbie"
            android:drawablePadding="23dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:hint="@string/registganderhint"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/logincode_xieyi"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:src="@drawable/tongyi_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/tongyi"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/logincode_xieyi_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/xieyi"
                android:textColor="@android:color/holo_red_light"
                android:textSize="13dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/regist_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="79dp"

            android:background="@drawable/round3_lightpurple"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/purple"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
