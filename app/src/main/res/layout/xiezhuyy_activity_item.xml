<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/xzyy_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">

                    <com.android.zmlive.view.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/xzyy_touxiang"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/fw658"
                        app:riv_border_color="@color/color_yellow_e0b11b"
                        app:riv_border_width="2dip"
                        app:riv_corner_radius="100dip"
                        app:riv_oval="true" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/xzyy_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="预约主播"
                android:textColor="@color/color_yellow_e0b11b"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xzyy_zbname"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="13dp" />


                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent">

                    <com.android.zmlive.view.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/xzyy_zbtouxiang"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/fw658"
                        app:riv_border_color="@color/light_aad95657"
                        app:riv_border_width="2dip"
                        app:riv_corner_radius="100dip"
                        app:riv_oval="true" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_dark" />
</LinearLayout>
