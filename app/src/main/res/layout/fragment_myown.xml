<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dark"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@mipmap/zhubobeijing"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/myownleft_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:src="@mipmap/left_go" />

                    <ImageView
                        android:id="@+id/myownbianjiimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:src="@mipmap/bianjiimg" />

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <com.android.zmlive.view.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/myown_head"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:background="@null"
                            android:scaleType="centerCrop"
                            app:riv_border_color="@color/white"
                            app:riv_border_width="2dip"
                            app:riv_corner_radius="100dip"
                            app:riv_oval="true" />

                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myown_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white_dark"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/myown_gander"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="3dp"
                        android:paddingRight="5dp"
                        android:src="@mipmap/nanimg" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/round3_667573e4">

                        <TextView
                            android:id="@+id/myown_level"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:layout_marginRight="1px"
                            android:background="@drawable/round3_aaffffff"
                            android:drawableLeft="@mipmap/zuan"
                            android:drawablePadding="3dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/myown_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="3dp"
                    android:text="ID"
                    android:textColor="@color/white_dark"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/purple_touming"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/myown_guanzhu"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/guanzhunum"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white_dark"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/guanzhunum"
                            android:gravity="center_horizontal|top"
                            android:text="@string/guanzhu"
                            android:textColor="@color/white_dark"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/myown_dianzan"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/zannum"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white_dark"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/zannum"
                            android:gravity="center_horizontal|top"
                            android:text="@string/zan"
                            android:textColor="@color/white_dark"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/myown_fans"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/fansnum"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white_dark"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/fansnum"
                            android:gravity="center_horizontal|top"
                            android:text="@string/fans"
                            android:textColor="@color/white_dark"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/myown_qiandaosz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/singin"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_wszc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/intactregist"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_bangzhufk"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/help"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_hezuozx"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/hezuo"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_shipinzx"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/shipin"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_shenfenrz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/renzheng"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_yqmbudeng"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/yaoqingma"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_xiezhu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/xiezhu"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/myown_shezhi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/rightgo"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/shezhi"
                android:textColor="@color/color_black_2e2625"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
