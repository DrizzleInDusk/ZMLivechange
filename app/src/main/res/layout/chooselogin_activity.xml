<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mainbg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1.04"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="0.26"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                >

                <!--<TextView-->
                <!--android:id="@+id/gotologincode_tv"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="36dp"-->
                <!--android:layout_marginRight="1px"-->
                <!--android:background="@drawable/round3_lightpurple1"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/vipcode"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="15dp" />-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/gotomobileregist_tv"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/round3_yellow"
                    android:gravity="center"
                    android:text="@string/mobileregist"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/gotologin_tv"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginRight="1px"
                android:background="@drawable/round3_lightpurple"
                android:gravity="center"
                android:text="@string/login2"
                android:textColor="#fa3a6e"
                android:textSize="15dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
